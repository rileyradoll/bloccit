<h1>All Posts</h1>
<%= button_to "New Post", new_post_path, :class => "btn btn-success", :method => :get %>
<% @posts.each do |post| %>
  <div class="media">
     <div class="media-body">
       <h4 class="media-heading">
         <%= link_to post.title, post %>
       </h4>
     </div>
   </div>
<% end %>
