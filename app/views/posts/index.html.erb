<div id="posts-main">
  <h1 id="all-posts-heading">All Posts</h1> <%= link_to "New Post", new_post_path(@post), class: 'btn btn-success', id: 'new-post-btn-index' %>
</div>
<% @posts.each do |post| %>
  <div class="media">
     <div class="media-body">
       <h4 class="media-heading">
         <%= link_to post.title, post %>
       </h4>
     </div>
   </div>
<% end %>
